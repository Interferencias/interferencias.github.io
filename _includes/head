  {% else %}
    <meta name="twitter:card" content="summary">
    <meta name="twitter:image" content="
      {% if page.image.thumb %}
        {{ site.url }}/assets/images/{{ page.image.thumb }}
      {% else %}
        {{ site.url }}/assets/images/{{ site.logo }}
      {% endif %}
    ">
  {% endif %}

  <meta name="twitter:title" content="
    {% if page.title %}
      {{ page.title }}
    {% else %}
      {{ site.title }}
    {% endif %}
  ">

  <meta name="twitter:description" content="
    {% if page.description %}
      {{ page.description }}
